#include <iostream>
using namespace std;


void merge(int arr[], int low, int mid, int high)
{
    int i = low;
    int j = mid + 1;
    int k = 0;

    int temp[100];  

    while(i <= mid && j <= high)
    {
        if(arr[i] < arr[j])
            temp[k++] = arr[i++];
        else
            temp[k++] = arr[j++];
    }

   
    while(i <= mid)
        temp[k++] = arr[i++];

  
    while(j <= high)
        temp[k++] = arr[j++];

   
    for(int p = 0; p < k; p++)
        arr[low + p] = temp[p];
}



void mergeSort(int arr[], int low, int high)
{
    if(low >= high)      
        return;

    int mid = (low + high) / 2;

    mergeSort(arr, low, mid);       
    mergeSort(arr, mid + 1, high);  
    merge(arr, low, mid, high);     
}



int main()
{
    int n;
    cout << "Enter size: ";
    cin >> n;

    int arr[n];

    cout << "Enter elements:\n";
    for(int i=0;i<n;i++)
        cin >> arr[i];

    mergeSort(arr,0,n-1);

    cout << "\nSorted Array:\n";
    for(int i=0;i<n;i++)
        cout << arr[i] << " ";
}
